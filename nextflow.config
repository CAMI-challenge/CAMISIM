params {
    // choose between "metagenomic" / "metatranscriptomic"
    pipeline = "metagenomic"
}

if (params.pipeline == "metagenomic") {

    includeConfig "${projectDir}/pipelines/metagenomic/config/metagenomic.config"

} else if (params.pipeline == "metatranscriptomic" ) {

    includeConfig "${projectDir}/pipelines/metatranscriptomic/config/metatranscriptomic.config"

}