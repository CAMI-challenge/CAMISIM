params {

    // size of a single sample in Gigabasepairs (Gbp)
    // actual size, including mapping files, might be larger
    size = 0.05

    // type of the used read simulator
    // choose from "art"/"nanosim3"/"wgsim"
    type="art"

    // number of samples to simualate reads for
    number_of_samples=2

    // the samples to do the gold standard assembly for ("[0,1]")
    pooled_gsa=[0,1]

    // an optional seed to get consistent results, if None is used, random seed is chosen
    seed = 632741178

    // if a biom profile is given, the metagenome simulation will be exectuted from profile (biom_profile="${projectDir}/defaults/mini.biom")
    biom_profile=""

    genome_locations_file = "${projectDir}/nextflow_defaults/genome_locations.tsv"

    ncbi_taxdump_file = "${projectDir}/tools/ncbi-taxonomy_20170222.tar.gz"

    metadata_file = "${projectDir}/defaults/metadata.tsv"
}

// include additional configs based on given parameter

if (params.type == "art") {

    includeConfig "${projectDir}/art.config"

} else if (params.type == "nanosim3" ) {

    includeConfig "${projectDir}/nanosim.config"

} else if (params.type == "wgsim" ) {

    includeConfig "${projectDir}/wgsim.config"
}

if (!params.biom_profile.isEmpty()) {

    includeConfig "${projectDir}/profile.config"
}

includeConfig "${projectDir}/distribution.config"

includeConfig "${projectDir}/conda.config"